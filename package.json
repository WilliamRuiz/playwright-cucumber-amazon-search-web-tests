{
  "name": "playwright-cucumber-ts",
  "version": "1.0.0",
  "scripts": {
    "test:bdd": "cucumber-js \"tests/features/**/*.feature\" --require-module ts-node/register --require \"tests/steps/**/*.ts\" --require \"tests/support/**/*.ts\" --format progress",
    "test:ui": "playwright test --ui",
    "test:pw": "playwright test",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.48.2",
    "allure-playwright": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3"
  }
}